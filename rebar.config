{minimum_otp_vsn, "18.1"}.
{cover_enabled, true}.
{erl_opts, [debug_info]}.
{deps, [
        {base64url, "0.0.1"},
        {jsone,  "1.4.7"}
       ]}.
{plugins, [
           rebar3_lint
          ]}.
{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config
          },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files
          },
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles
          },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config
          }
        ]}.
