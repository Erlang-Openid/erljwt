{minimum_otp_vsn, "18.1"}.
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors]}.
{deps, [
        {base64url, "0.0.1"},
        {jsone,  "1.4.7"}
       ]}.
{plugins, [
           {rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git",
                          {tag, "0.1.6"}}}
          ]}.
{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config
          },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files
          },
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles
          },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config
          }
        ]}.
